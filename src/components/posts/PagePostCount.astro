---
interface Props {
    postCount: number,
    postsPerPage?: number,
    class?: string,
}

const { postCount, postsPerPage = 25, class:className="post-count" } = Astro.props;

---
<div class={className}>
    {postCount <= postsPerPage &&
        <div>
            All {postCount} posts are listed below.
        </div>
    }
    {postCount > postsPerPage &&
        <div>
            The most recent {postsPerPage} posts are listed below.
            To view the complete archive of {postCount} posts, click here.
        </div>
    }
</div>
